<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:progressBarStyle">@style/ProgressBar</item>
        All customizations that are NOT specific to a particular API-level can go here.</style>

    <style name="ProgressBar" parent="@style/android:Theme.Holo">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/green</item>
    </style>

    <style name="AppTheme.NoTitle">
        <item name="android:windowNoTitle">true</item>
        Support library compatibility        <item name="windowActionBar">false</item>
    </style>

    <style name="PauseDialog" parent="@android:style/Theme.Black">
        <item name="android:windowTitleStyle">@style/PauseDialogTitle</item>
    </style>

    <style name="PauseDialogTitle" parent="@android:style/TextAppearance.DialogWindowTitle">
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="DialogWindowTitle">
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textAppearance">@android:style/TextAppearance.DialogWindowTitle</item>
    </style>

    
</resources>