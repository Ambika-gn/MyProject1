<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="700dp"
    android:layout_height="530dp"
    android:layout_gravity="center" >

    <RelativeLayout
        android:id="@+id/address_map_title"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/lightgreen" >

        <TextView
            android:id="@+id/address_map_title_text"
            android:layout_width="fill_parent"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:gravity="center|center_horizontal"
            android:paddingTop="5dp"
            android:text="@string/address"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/btn_address_map_close"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="26dp"
            android:contentDescription="@string/content"
            android:src="@drawable/btn_close" />
    </RelativeLayout>

    <TextView
        android:id="@+id/address_map_text"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/address_map_title"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="address"
        android:textSize="20sp" />

    <FrameLayout
        android:id="@+id/mapAddress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/address_map_text"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp" >
    </FrameLayout>

</RelativeLayout>