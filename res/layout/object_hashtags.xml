<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="530dp"
    android:layout_height="530dp"
    android:layout_gravity="center" >

    <RelativeLayout
        android:id="@+id/hashtags_title"
        android:layout_width="530dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/lightgreen" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:gravity="center|center_horizontal"
            android:paddingTop="5dp"
            android:text="@string/text_hashtags"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/btn_hashtags_close"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="24dp"
            android:contentDescription="@string/content"
            android:src="@drawable/btn_close" />
    </RelativeLayout>

    <TextView
        android:id="@+id/selectedHashtagsObject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hashtags_title"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal|center"
        android:text="name"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/object_hashtags"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/selectedHashtagsObject"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/table_border"
        android:divider="@android:color/transparent" >
    </ListView>

</RelativeLayout>