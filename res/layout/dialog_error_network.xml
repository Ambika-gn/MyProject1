<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="150dp"
    android:background="@color/white" >

     <TextView
        android:id="@+id/error_network_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="@string/error_popup_title"
        android:textSize="20sp" 
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/error_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_below="@+id/error_network_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal|center"
        android:text="@string/error_popup_desc"
        android:textSize="15sp" />
    <View
        android:layout_height="1dip"
        android:layout_width="match_parent"
        android:layout_below="@+id/error_description"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/silver" />

    <TextView
        android:id="@+id/network_error_accept_button"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/error_description"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal|center"
        android:text="@string/accept"
        android:textColor="@color/blue"
        android:textSize="20sp" />

   

</RelativeLayout>